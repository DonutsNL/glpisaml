<!-- implemented in Loginflow->showLoginScreen(void): string -->
<div>
    <div class="card-header">
        <h2>{{ header }}</h2>
    </div>
    <div class='row' style="max-width: 350px;">
        {% for button in buttons %}
            <div class="col-sm-6" style="cursor:pointer;">
                <div class="saml_button card-body justify-content-center" style="width:170px;">
                    <div class="list-group-item padding: 0px 0px 0px 0px">
                        <a onclick="window.location.href='?SAML={{ button.id|abs }}'" title="phpSaml">
                            <i class="{{ button.icon|striptags }}"></i>
                            <span class="card-title">{{ button.name|striptags }}</span>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div><p>{{ noconfig }}</p>
        {% endfor %}
        </div>
    </div>
</div>